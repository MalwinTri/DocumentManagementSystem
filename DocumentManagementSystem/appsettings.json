{
  "ConnectionStrings": {
    "Default": "Host=db;Port=5432;Database=dms;Username=postgres;Password=postgres"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "DocumentManagementSystem": "Debug"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/dms-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 14,
          "shared": true
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "DocumentManagementSystem": "Debug",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",

  "GarageS3": {
    "Endpoint": "http://garage:3900",
    "AccessKey": "",
    "SecretKey": "",
    "Bucket": "documents",
    "Region": "garage"
  },

  "Ocr": {
    "Language": "eng+deu",
    "TessdataPrefix": "/usr/share/tesseract-ocr/5/tessdata",
    "Dpi": 300
  },

  "Gemini": {
    "ApiKey": "",
    "BaseUrl": "https://generativelanguage.googleapis.com/v1beta",
    "Model": "models/gemini-2.5-flash"
  }
}
